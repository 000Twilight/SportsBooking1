<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".VenueListActivity">

    <!-- Header Section -->
    <LinearLayout
        android:id="@+id/header_section"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:padding="8dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <ImageView
            android:id="@+id/icon_header"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/stadium_logo"
            android:contentDescription="@string/icon_header_desc"
            app:tint="@color/orange" />

        <TextView
            android:id="@+id/header_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:text="@string/find_various_venues"
            android:textColor="@color/orange"
            android:textSize="20sp"
            android:textStyle="bold" />
    </LinearLayout>

    <!-- Search Bar -->
    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/search_input_layout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@id/header_section"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:boxBackgroundColor="@color/search_background"
        app:boxCornerRadiusTopStart="8dp"
        app:boxCornerRadiusTopEnd="8dp"
        app:boxCornerRadiusBottomStart="8dp"
        app:boxCornerRadiusBottomEnd="8dp"
        app:boxStrokeColor="@color/orange">

        <androidx.appcompat.widget.SearchView
            android:id="@+id/search_venue"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:queryHint="@string/search_hint"
            android:background="@drawable/edittext_background"
            android:iconifiedByDefault="false" />
    </com.google.android.material.textfield.TextInputLayout>

    <!-- Category Selector -->
    <LinearLayout
        android:id="@+id/category_selector"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/search_input_layout"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <Button
            android:id="@+id/button_badminton"
            style="@style/Widget.MaterialComponents.Button.TextButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableStart="@drawable/ic_badminton"
            android:drawablePadding="8dp"
            android:background="@drawable/category_button_background"
            android:text="@string/badminton"
            android:textColor="@color/orange"
            android:paddingHorizontal="16dp" />

        <Button
            android:id="@+id/button_driving_range"
            style="@style/Widget.MaterialComponents.Button.TextButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableStart="@drawable/ic_golf"
            android:drawablePadding="8dp"
            android:background="@drawable/category_button_background"
            android:text="@string/driving_range"
            android:textColor="@color/black"
            android:paddingHorizontal="16dp"
            android:layout_marginStart="16dp" />
    </LinearLayout>

    <!-- Filter Section -->
    <LinearLayout
        android:id="@+id/filter_section"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/category_selector"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- Date and Reset -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/spinner_month"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:padding="8dp"
                android:text="@string/date_text"
                android:background="@drawable/edittext_background"
                android:gravity="center"
                android:textSize="14sp"
                android:textColor="@color/black"/>

            <TextView
                android:id="@+id/reset_filter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/reset_filter"
                android:textColor="@color/orange"
                android:textSize="14sp"
                android:padding="8dp"
                android:gravity="center_vertical|end"/>
        </LinearLayout>

        <!-- Start & End Time -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/text_start_time"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/edittext_background"
                android:padding="12dp"
                android:text="@string/select_start_time"
                android:drawableEnd="@drawable/ic_clock"
                android:textColor="@color/black"
                android:gravity="center_vertical" />

            <TextView
                android:id="@+id/text_end_time"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/edittext_background"
                android:padding="12dp"
                android:layout_marginStart="8dp"
                android:text="@string/select_end_time"
                android:drawableEnd="@drawable/ic_clock"
                android:textColor="@color/black"
                android:gravity="center_vertical" />
        </LinearLayout>
    </LinearLayout>

    <!-- Venue List -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recycler_venue"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/filter_section"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:orientation="vertical"
        android:scrollbars="vertical" />

</androidx.constraintlayout.widget.ConstraintLayout>
