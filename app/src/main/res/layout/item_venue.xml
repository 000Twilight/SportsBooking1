<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardCornerRadius="8dp"
    app:cardElevation="4dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp">

        <!-- Gambar Venue di sebelah kiri -->
        <ImageView
            android:id="@+id/venue_image"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:contentDescription="@string/venue_image_desc"
            android:scaleType="centerCrop"
            android:src="@drawable/venue_image" />

        <!-- Kontainer untuk Teks di sebelah kanan -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/venue_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Venue Name"
                android:textColor="@color/black"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/venue_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Harga: Rp. 1.200.000"
                android:textColor="@color/black"
                android:textSize="16sp"
                android:layout_marginTop="4dp" />

            <TextView
                android:id="@+id/venue_location"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Lokasi: Jakarta"
                android:textColor="@color/gray"
                android:textSize="14sp"
                android:layout_marginTop="4dp" />

            <TextView
                android:id="@+id/venue_category"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Kategori: Sepak Bola"
                android:textColor="@color/gray"
                android:textSize="14sp"
                android:layout_marginTop="2dp" />

            <TextView
                android:id="@+id/venue_capacity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Kapasitas: 120"
                android:textColor="@color/gray"
                android:textSize="14sp"
                android:layout_marginTop="2dp" />

            <TextView
                android:id="@+id/venue_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Status: Tersedia"
                android:textColor="@color/gray"
                android:textSize="14sp"
                android:layout_marginTop="2dp" />

            <TextView
                android:id="@+id/venue_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Waktu: 08:00 - 22:00"
                android:textColor="@color/gray"
                android:textSize="14sp"
                android:layout_marginTop="2dp" />

        </LinearLayout>
    </LinearLayout>

</androidx.cardview.widget.CardView>
